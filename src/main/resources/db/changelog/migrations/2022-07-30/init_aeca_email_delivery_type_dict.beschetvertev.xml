<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <changeSet id="init_aeca_email_delivery_type_dict.beschetvertev.xml" author="pavel.beschetvertev">
        <comment>Создание таблицы справочника типов рассылок</comment>

        <createTable tableName="aeca_email_delivery_type_dict"
                     remarks="Справочник типов рассылок">
            <column name="id"
                    type="bigint"
                    remarks="Идентификатор записи"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="aeca_email_delivery_type_dict_id_pkey"
                             nullable="false"
                             unique="true"/>
            </column>
            <column name="code"
                    type="text"
                    remarks="Код записи">
                <constraints nullable="false"/>
            </column>
            <column name="value"
                    type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql endDelimiter=";">
            INSERT INTO public.aeca_email_delivery_type_dict (value,code) VALUES
            ('Действие сертификата истекает','CERTIFICATE_EXPIRED');
        </sql>
    </changeSet>
</databaseChangeLog>